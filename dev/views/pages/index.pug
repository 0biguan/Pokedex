extends ../templates/template.pug

block top

    #topbar.topbar
      input(type="text" name="search" placeholder="Name/#000" id="search").topbar__input
    
    #slider.slider
      button(type="button" tabindex="0")#slider-button.slider__button 
      img(src="assets/img/pokeball.png", alt="pokeball")#slider-img.slider__img

    .title
      h1 Pokedex

block main

    main#main.main
      #main-content.main__content 
        p No Matches
      
    a(href="#")#gotop.gotop
      img(src="assets/icons/arrow.svg")

    #modal.modal
      form#radio-group.radio
        p.radio__title Sort By:
        #radio-options.radio__options
          input(type="radio" id="number" name="sort" value="number" tabindex="0" checked).radio__input
          input(type="radio" id="name" name="sort" value="name" tabindex="0").radio__input
          input(type="radio" id="favorites" name="sort" value="favorites" tabindex="0").radio__input
          +labels(radio)

block script
  script(src="js/scripts-min.js")
